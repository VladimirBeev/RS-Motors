@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <a id="names" class="btn btn-primary">Names</a>
    <p id="namess"></p>
</div>

@section Scripts{
    <script>
        $(document.getElementById('names')).click(function () {
            $.ajax({
                type: "GET",
                url: "@Url.Action("GetNames","Customer")",
                dataType: "json",
                success: function (result) {
                    console.log(result)
                    document.getElementById('namess').innerHTML = result.value;
                },
                error: function (req, status, error) {
                    console.log(status)
                }
            });
        })
    </script>
}
